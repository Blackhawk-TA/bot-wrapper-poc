{
	"name": "dynobot-framework",
	"version": "1.0.4",
	"description": "A TypeScript framework which works as an API wrapper for chat bots such as discord or slack.",
	"main": "./build/src/DiscordBot.js",
	"scripts": {
		"test": "tsc && mocha -r ts-node/register **/*Test.js --exit",
		"build": "typedoc --out doc src/wrappers/interfaces/ && tsc",
		"validate": "eslint --ext .ts src tests"
	},
	"keywords": [
		"discord-bot",
		"discord-js",
		"javascript",
		"typescript",
		"chatbot",
		"slack",
		"api",
		"wrapper"
	],
	"author": {
		"name": "Blackhawk"
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/Blackhawk-TA/chatbot-api-wrapper.git"
	},
	"dependencies": {
		"discord.js": "^11.5.0"
	},
	"devDependencies": {
		"ts-node": "^8.3.0",
		"typescript": "^3.5.2",
		"eslint": "^6.0.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.0.12",
		"mocha": "^6.1.4",
		"sinon": "^7.3.2"
	}
}
