{
	"name": "dynobot-framework",
	"version": "1.1.4",
	"description": "A TypeScript framework which works as an API wrapper for chat bots such as discord or slack.",
	"main": "./build/src/DiscordBot.js",
	"scripts": {
		"build": "typedoc --excludeExternals --out doc src/wrappers/interfaces/ && tsc",
		"test": "mocha -r ts-node/register **/*Test.ts --exit",
		"validate": "eslint --ext .ts src tests",
		"validation-build": "npm run-script validate && nyc npm run-script test && npm run-script build"
	},
	"keywords": [
		"discord-bot",
		"discord-js",
		"javascript",
		"typescript",
		"chatbot",
		"slack",
		"api",
		"wrapper",
		"framework",
		"js",
		"ts"
	],
	"author": {
		"name": "Blackhawk"
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/Blackhawk-TA/chatbot-api-wrapper.git"
	},
	"dependencies": {
		"discord.js": "^11.5.0"
	},
	"devDependencies": {
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.12.24",
		"@typescript-eslint/parser": "^1.13.0",
		"coveralls": "^3.0.9",
		"dotenv": "^8.2.0",
		"eslint": "^6.8.0",
		"eslint-plugin-promise": "^4.2.1",
		"mocha": "^6.2.2",
		"nyc": "^14.1.1",
		"sinon": "^7.5.0",
		"ts-node": "^8.5.4",
		"typedoc": "^0.15.6",
		"typescript": "^3.7.4"
	}
}
